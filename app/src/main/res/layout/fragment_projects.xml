<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    tools:context=".MenuFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/account"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/account" />

        <ImageView
            android:id="@+id/circles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/circle_design"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circles"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:letterSpacing="0.15"
            android:text="@string/projects"
            android:textColor="@color/black"
            android:textSize="@dimen/title" />

        <ImageView
            android:id="@+id/picture"
            android:layout_width="256dp"
            android:layout_height="162dp"
            android:layout_below="@id/text1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:src="@drawable/paint_swatches" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/plus_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@id/account"
            android:backgroundTint="@color/green"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            />


        <androidx.cardview.widget.CardView
            android:id="@+id/PROJECT1_BUTTON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/picture"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:paddingStart="16dp"
                android:textColor="@color/black"
                android:textSize="@dimen/buttons"
                tools:text="Knightsbridge Penthouse" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/PROJECT2_BUTTON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PROJECT1_BUTTON"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:paddingStart="16dp"
                android:textColor="@color/black"
                android:textSize="@dimen/buttons"
                tools:text="London Townhouse" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/PROJECT3_BUTTON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PROJECT2_BUTTON"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:paddingStart="16dp"
                android:textColor="@color/black"
                android:textSize="@dimen/buttons"
                tools:text="Edinburgh Cottage" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/PROJECT4_BUTTON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PROJECT3_BUTTON"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:paddingStart="16dp"
                android:textColor="@color/black"
                android:textSize="@dimen/buttons"
                tools:text="221B Backer Street" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/PROJECT5_BUTTON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PROJECT4_BUTTON"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:paddingStart="16dp"
                android:textColor="@color/black"
                android:textSize="@dimen/buttons"
                tools:text="Loch-Ness Scotland Villa" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/PROJECT6_BUTTON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PROJECT5_BUTTON"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:paddingStart="16dp"
                android:textColor="@color/black"
                android:textSize="@dimen/buttons"
                tools:text="Clarence House" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>